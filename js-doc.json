{
  "opts": {
    "destination": "./docs/api",
    "readme": "./README.md",
    "recurse": true
  },
  "plugins": ["plugins/markdown"],
  "source": {
    "include": ["src/", "bin"],
    "exclude": ["*.spec.*"],
    "includePattern": ".+\\.js(doc)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": [ "jsdoc", "closure" ]
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "layoutFile": "./docs/_jsdoc/layout"
    }
  }
}
